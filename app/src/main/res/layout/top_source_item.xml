<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivSourceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_source" />

        <TextView
            android:id="@+id/tvMainSourceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivSourceIcon"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/figtree_semibold"
            android:maxLines="1"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMainTextDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMainSourceText"
            android:ellipsize="end"
            android:fontFamily="@font/figtree_regular"
            android:maxLines="1"
            android:text="Top Source"
            android:textColor="@color/light_trucks_text"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>